@model IEnumerable<TouristAgency.Models.HotelViewModel>

@{
    ViewBag.Title = "Отели";
}

<h2>Отели</h2>

<p>
    @Html.ActionLink("Добавить", "Create", "User", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.BootstrapRating(modelItem => item.HotelRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreeRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountryName)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
